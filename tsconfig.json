{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"types": ["jest", "node", "@types/jest"]
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules"]
}
